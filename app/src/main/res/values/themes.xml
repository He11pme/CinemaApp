<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CinemaApp" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="bottomAppBarStyle">@style/Widget.CinemaApp.BottomAppBar</item>
        <item name="floatingActionButtonStyle">@style/Widget.CinemaApp.FloatingActionButton</item>
        <item name="appBarLayoutStyle">@style/Widget.CinemaApp.AppBarLayout</item>

    </style>

    <style name="Widget.CinemaApp.CoordinatorLayout" parent="Widget.Support.CoordinatorLayout">

        <item name="android:background">@color/gray_50</item>

    </style>

    <!--    App Bar Layout     -->

    <style name="Widget.CinemaApp.AppBarLayout" parent="Widget.Material3.AppBarLayout">

        <item name="materialThemeOverlay">@style/ThemeOverlay.CinemaApp.AppBarLayout</item>

    </style>

    <style name="ThemeOverlay.CinemaApp.AppBarLayout" parent="">

        <item name="colorSurface">@color/gray_50</item>

    </style>

    <!--    Bottom App Bar      -->

    <style name="Widget.CinemaApp.BottomAppBar" parent="Widget.Material3.BottomAppBar.Legacy">

        <item name="materialThemeOverlay">@style/ThemeOverlay.CinemaApp.BottomAppBar</item>

    </style>

    <style name="ThemeOverlay.CinemaApp.BottomAppBar" parent="ThemeOverlay.Material3.BottomAppBar.Legacy">

        <item name="colorSurfaceContainer">@color/blue_gray_50</item>

    </style>

    <!--    Bottom Navigation View      -->

    <style name="Widget.CinemaApp.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">

        <item name="android:background">@color/transparent</item>
        <item name="itemGravity">center</item>
        <item name="itemIconSize">@dimen/_20sdp</item>
        <item name="itemTextColor">@color/blue_700</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.CinemaApp.BottomNavigationView</item>

    </style>

    <style name="ThemeOverlay.CinemaApp.BottomNavigationView" parent="ThemeOverlay.Material3.BottomNavigationView">

        <item name="colorSecondaryContainer">@color/blue_gray_100</item>
        <item name="colorOnSecondaryContainer">@color/blue_700</item>

        <item name="colorOnSurfaceVariant">@color/gray_700</item>

    </style>

    <!--    Floating Action Button      -->

    <style name="Widget.CinemaApp.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">

        <item name="fabCustomSize">80dp</item>
        <item name="maxImageSize">28dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.CinemaApp.FloatingActionButton</item>

    </style>

    <style name="ThemeOverlay.CinemaApp.FloatingActionButton" parent="ThemeOverlay.Material3.FloatingActionButton.Primary">

        <item name="colorPrimaryContainer">@color/blue_400</item>
        <item name="shapeAppearanceCornerLarge">@style/ShapeAppearance.Material3.Corner.Large</item>

    </style>

    <!--    Text View for rating film      -->

    <style name="Widget.CinemaApp.TextViewRatingFilm" parent="Widget.AppCompat.TextView">

        <item name="android:layout_margin">@dimen/_3sdp</item>
        <item name="android:paddingStart">@dimen/_4sdp</item>
        <item name="android:paddingTop">@dimen/_1sdp</item>
        <item name="android:paddingEnd">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_1sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>

    </style>

    <style name="Widget.CinemaApp.TextViewRatingFilm.Color">

        <item name="android:background">@color/blue_400</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <!--    Text View for name film      -->

    <style name="Widget.CinemaApp.TextViewNameFilm" parent="Widget.AppCompat.TextView">

        <item name="android:layout_margin">@dimen/_3sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>

    </style>

    <style name="Widget.CinemaApp.TextViewNameFilm.Color">

        <item name="android:textColor">@color/black</item>

    </style>


    <style name="Theme.CinemaApp" parent="Base.Theme.CinemaApp" />

</resources>